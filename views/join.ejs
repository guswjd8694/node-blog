<!doctype html>
<html lang="ko">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Join</title>
    <link rel="stylesheet" href="css/join.css">
</head>
<header>
    <a href="/" class="toGoHomeBtn">
        <img src="/img/dallae.png" alt="">
    </a>
</header>
<body>
    <h2>회원가입</h2>
    <form action="/join" method="post">
        <div class="member">
            <!-- 2. 필드 -->
            <div class="field">
                <b>아이디</b>
                <span class="placehold-text"><input type="text" name="userid"></span>
            </div>
            <div class="field">
                <b>비밀번호</b>
                <input class="userpw" type="password" name="password">
            </div>
            <div class="field">
                <b>이름</b>
                <input type="text" name="name">
            </div>

            <!-- 3. 필드(생년월일) -->
            <div class="field birth">
                <b>생년월일</b>
                <div>
                    <input type="number" name="year" placeholder="년(4자)">
                    <select name="month">
                        <option name="" value="">월</option>
                        <option name="01" value="01">1월</option>
                        <option name="02" value="02">2월</option>
                        <option name="03" value="03">3월</option>
                        <option name="04" value="04">4월</option>
                        <option name="05" value="05">5월</option>
                        <option name="06" value="06">6월</option>
                        <option name="07" value="07">7월</option>
                        <option name="08" value="08">8월</option>
                        <option name="09" value="09">9월</option>
                        <option name="10" value="10">10월</option>
                        <option name="11" value="11">11월</option>
                        <option name="12" value="12">12월</option>
                    </select>
                    <input type="number" name="day" placeholder="일">
                </div>
            </div>

            <!-- 4. 필드(성별) -->
            <div class="field gender">
                <b>성별</b>
                <div class="input">
                    <label for="male"><input type="radio" value="남자" name="gender">남자</label>
                    <label for="female"><input type="radio" value="여자" name="gender">여자</label>
                    <label for="no"><input type="radio" value="선택안함" name="gender">선택안함</label>
                </div>
            </div>

            <!-- 5. 이메일_전화번호 -->
            <div class="field">
                <b>본인 확인 이메일<small>(선택)</small></b>
                <input type="email" name="email" placeholder="선택입력">
            </div>

            <div class="field tel-number">
                <b>휴대전화</b>
                <select>
                    <option value="">대한민국 +82</option>
                </select>
                <div>
                    <input type="tel" name="hp" placeholder="전화번호 입력">
                </div>
            </div>

            <!-- 6. 가입하기 버튼 -->
            <input class="styleBtn" type="submit" value="가입하기">
        </div>
    </form>
</body>
</html>